@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/EmployeesManagement.png" alt="Employees Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-primary">
                    Employees Management
                    <a asp-area="" asp-controller="Employee" asp-action="All" class="btn btn-default">Start</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Project.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-primary">
                    Company Projects
                    <a asp-area="" asp-controller="Project" asp-action="All" class="btn btn-default">View</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/departments.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-primary">
                    View Departments
                    <a asp-area="" asp-controller="Department" asp-action="All" class="btn btn-default">View</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Employees</h2>
        <ul>
            <li>
                <a asp-area="" asp-controller="Employee" asp-action="All" class="btn btn-link">List of employees</a>
            </li>
            @if (User.IsInRole("administrator"))
            {
                <li>
                    <a asp-area="" asp-controller="Employee" asp-action="Add" class="btn btn-link">Add</a>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Projects</h2>
        <ul>
            <li>
                <a asp-area="" asp-controller="Project" asp-action="All" class="btn btn-link">All company projects</a>
            </li>
            @if (User.IsInRole("administrator"))
            {
                <li>
                    <a asp-area="" asp-controller="Project" asp-action="Add" class="btn btn-link">Add</a>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Requests</h2>
        <ul>
            <li>
                <a asp-area="" asp-controller="Request" asp-action="Add" class="btn btn-link">Create new Request</a>
            </li>
        </ul>
    </div>
</div>


