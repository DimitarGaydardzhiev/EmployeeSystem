@model IEnumerable<ProjectViewModel>

@{
    ViewData["Title"] = "Company Projects";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="table-responsive">
        <table class="table table-hover">
            <tr>
                <th>Name</th>
                <th>Employees</th>
                <th>Status</th>
            </tr>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => project.Name)</td>
                    <td>
                        @foreach (var employee in project.Employees)
                        {
                            @(employee.Name)
                            <br />
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => project.Status)</td>
                </tr>
            }
        </table>
    </div>
    @if (User.IsInRole("administrator"))
    {
        <div class="text-right">
            @Html.ActionLink("Add New Project", "Add", "Project", null, new Dictionary<string, object>
               {
                    { "class", "btn btn-primary" }
               })
        </div>
    }
</div>
